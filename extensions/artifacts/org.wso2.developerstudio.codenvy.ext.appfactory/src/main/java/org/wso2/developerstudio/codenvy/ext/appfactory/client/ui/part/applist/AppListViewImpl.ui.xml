<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:VerticalPanel width="100%">
        <g:HorizontalPanel ui:field="buttonPanel">
            <g:SimplePanel ui:field="loginButtonPanel">
            </g:SimplePanel>
            <g:SimplePanel ui:field="refreshButtonPanel">
            </g:SimplePanel>
            <g:SimplePanel width="10">
            </g:SimplePanel>
            <g:SimplePanel width="10">
                <g:Label text="" ui:field="messageLabel"/>
            </g:SimplePanel>
        </g:HorizontalPanel>
        <g:VerticalPanel ui:field="appListPanel">
        </g:VerticalPanel>
        <g:TabLayoutPanel barHeight="20" ui:field="tabLayoutPanel">
            <g:tab>
                <g:header>App Info</g:header>
                <g:FlowPanel ui:field="infoPanel"/>
            </g:tab>
            <g:tab>
                <g:header>Build Status</g:header>
                <g:FlowPanel ui:field="buildPanel"/>
            </g:tab>
            <g:tab>
                <g:header>Team</g:header>
                <g:FlowPanel ui:field="teamPanel"/>
            </g:tab>
            <g:tab>
                <g:header>Data-Sources</g:header>
                <g:FlowPanel ui:field="dataSourcesPanel"/>
            </g:tab>
        </g:TabLayoutPanel>
    </g:VerticalPanel>

</ui:UiBinder>
